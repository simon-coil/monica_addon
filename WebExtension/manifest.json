{

  "description": "Adds a browser action icon to the toolbar. Click the button to note a gift idea with url from current Tab.",
  "manifest_version": 2,
  "name": "Giftmonica",
  "version": "1.0",
  "icons": {
    "48": "icons/Giftbox.svg"
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/Giftbox.svg",
    "theme_icons": [{
      "light": "icons/Giftbox.svg",
      "dark": "icons/Giftbox.svg",
      "size": 32
    }],
    "default_title": "Giftmonica",
    "default_popup": "popup/choose_gift.html"
  },


  "applications": {
    "gecko": {
      "id": "simon-coil@protonmail.com",
      "strict_min_version": "42.0"
    }
  }


}
